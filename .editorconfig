# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 2

[{*.js,*.jsx,*.json,*.yml}]
indent_size = 2

# Format Config
[{package.json,.editorconfig,.babelrc,.eslintrc,.stylelintrc}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
